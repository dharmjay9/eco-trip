<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="@dimen/activity_small_padding"
        android:elevation="@dimen/activity_horizontal_margin"
        android:layout_width="120dp"
        android:layout_height="120dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/nature_1" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="bottom"
                android:paddingBottom="@dimen/activity_small_padding"
                android:paddingLeft="@dimen/activity_small_padding"
                android:text="BANDIPUR Tiger" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
