    <android.support.v7.widget.CardView
        android:id="@+id/cv_booking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin">
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_payment_success_icon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="20dp"
                android:src="@drawable/ic_done_24dp"/>

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Success"
                android:textColor="@color/light_black"
                android:textSize="@dimen/title_text" />

            <TextView
                android:id="@+id/tv_payment_successfully"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:text="Your payment of \u20B91.23 was Successfully completed"
                android:textAlignment="center"
                android:textColor="@color/colorBlack" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/tvContinue"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="50dp"
        android:background="@color/colorAccent"
        android:text="Continue to home screen"
        android:textAllCaps="false"
        android:textColor="@color/white" />


</RelativeLayout>