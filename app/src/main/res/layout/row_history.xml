<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical"
    app:cardCornerRadius="5dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/tvBookingId"
            style="@style/TextViewMedium_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ivListing"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            tools:text="Booking Id : 945645645" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/ivListing"
            android:maxLines="2"
            android:text="SUCESS." />

        <TextView
            android:id="@+id/tvBookingPlace"
            style="@style/TextViewMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvBookingId"
            tools:text="Bangalore" />

        <LinearLayout
            android:id="@+id/layout_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvBookingPlace"
            android:weightSum="2">

            <TextView
                android:id="@+id/tvBookingDate"
                style="@style/TextViewMedium_detail_regulr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvCheckInDate"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:text="TextView 11" />

            <TextView
                android:id="@+id/tvCheckInDate"
                style="@style/TextViewMedium_detail_regulr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvBookingId"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:text="TextView 11" />


        </LinearLayout>


        <TextView
            android:id="@+id/tvAmountPaid"
            style="@style/TextViewMedium_detail_regulr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_textview"
            android:paddingTop="5dp"
            android:text="\u20B9 500" />
    </RelativeLayout>


</android.support.v7.widget.CardView>