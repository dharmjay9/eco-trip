<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_height="200dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/ivSafari"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_1"
            />

        <TextView
            android:id="@+id/tvComingSoon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:textStyle="bold"
            android:textSize="24sp"
            android:padding="@dimen/activity_horizontal_margin"
            android:visibility="visible"
            android:textColor="@color/colorWhite"
            android:text="Coming Soon..." />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:background="@color/colorBlackDarkTransparent"
            android:orientation="vertical"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/hafe_margin"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:text="Bandipur National Park, an 874-sq.-km forested reserve in the southern Indian state of Karnatak" />

            <TextView

                android:id="@+id/tvTrailCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:text="7 trails"
                android:paddingBottom="@dimen/margin_smaller"
                />
        </LinearLayout>

    </FrameLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>



