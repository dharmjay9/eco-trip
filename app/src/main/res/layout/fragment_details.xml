<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_height="wrap_content">
    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_horizontal_margin">

        <TextView
            android:padding="@dimen/activity_horizontal_margin"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="Check In Timings"/>

        <TextView
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="From 12:00 PM"/>

        <TextView
            android:padding="@dimen/activity_horizontal_margin"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="Check Out Timings"/>

        <TextView
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Until 12:00 PM"/>

        <TextView
            android:padding="@dimen/activity_horizontal_margin"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="Cancellation"/>

        <TextView
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancellation and prepayment policies vary according to room type. Please check what room conditions may apply when selecting your room above."/>

        <TextView
            android:padding="@dimen/activity_horizontal_margin"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="Contact Details"/>

        <TextView
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="info@myecotrip.com"/>


    </LinearLayout>

</android.support.v7.widget.CardView>

