<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="titleTextColor">#ffffff</item>
        <item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>



    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">#ffffff</item>
        <item name="titleTextColor">#ffffff</item>

    </style>

    <style name="AppTheme.Widget.TextView" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
    </style>
    <style name="TextViewSmallWhiteMargin" parent="android:TextAppearance.Small">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>
    <style name="TextViewSmallWhiteBold" parent="android:TextAppearance.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextViewMedium" parent="android:TextAppearance.Medium">
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="fontPath">fonts/PFBeauSansPro-Regular.ttf</item>
    </style>

    <style name="TextViewMedium_detail" parent="android:TextAppearance.Medium">
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:textSize">@dimen/medium_text_small</item>
        <item name="fontPath">fonts/AVENIRLTSTD-BOOK.OTF</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">right</item>

    </style>

    <style name="TextViewMedium_big" parent="android:TextAppearance.Medium">
    <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:lineSpacingExtra">1dp</item>
        <item name="fontPath">fonts/AVENIRLTSTD-BOOK.OTF</item>
    </style>

    <style name="TextViewMedium_big_big" parent="android:TextAppearance.Medium">
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:textSize">@dimen/title_text</item>
        <item name="android:lineSpacingExtra">1dp</item>
        <item name="fontPath">fonts/AVENIRLTSTD-BOOK.OTF</item>
    </style>

    <style name="TextView_button_style" parent="android:TextAppearance.Medium">
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:lineSpacingExtra">1dp</item>
        <item name="android:background">@drawable/border</item>
        <item name="fontPath">fonts/AVENIRLTSTD-BOOK.OTF</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="DottedSeperator">
        <item name="android:textSize">@dimen/dotted_seperator_text_size</item>
        <item name="android:layout_marginLeft">@dimen/margin</item>
        <item name="android:layout_marginRight">@dimen/margin</item>
        <item name="android:maxLines">1</item>
        <item name="android:text">@string/seperator</item>
        <item name="android:textColor">@color/gray</item>
    </style>
</resources>
