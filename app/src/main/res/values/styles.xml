<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="titleTextColor">#ffffff</item>
        <item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>



    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">#ffffff</item>
        <item name="titleTextColor">#ffffff</item>

    </style>

    <style name="AppTheme.Widget.TextView" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
    </style>
    <style name="TextViewSmallWhiteMargin" parent="android:TextAppearance.Small">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>
    <style name="TextViewSmallWhiteBold" parent="android:TextAppearance.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextViewMedium" parent="android:TextAppearance.Medium">
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="fontPath">fonts/PFBeauSansPro-Regular.ttf</item>
    </style>
</resources>
